<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/y"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="100dp"
    android:alpha=".9"
    tools:context="com.example.lenovo.scetnotifier.login">

    <TextView
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:gravity="center_horizontal"
        android:text="ScetNotifier"
        android:textColor="@color/white"

        android:textSize="35dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome to ScetNotifier.Please LogIn Yourself here."
        android:textColor="@color/white"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/loginemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/txtstyle"
        android:hint="Email Address"
        android:paddingBottom="10dp"
        android:paddingLeft="100dp"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/loginpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/txtstyle"
        android:textColor="@color/white"

        android:hint="Password"
        android:inputType="textPassword"
        android:paddingBottom="10dp"
        android:paddingLeft="110dp"
        android:paddingTop="10dp"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btnstyle"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"

        android:layout_marginTop="30dp"
        android:paddingBottom="10dp"
        android:paddingLeft="75dp"
        android:paddingTop="10dp"
        android:text="Not Registered ? Click Here.."
        android:clickable="true"
        android:id="@+id/txtlinkreg"

        android:textColor="@color/white"
        android:textSize="15dp"
        />



</LinearLayout>
